//--------------------------------------------------------------
// Private Application Configuration options
//--------------------------------------------------------------
ApplicationMgr.Dlls        = { "GaudiExamples" };
ApplicationMgr.EvtMax      = 2000000;
ApplicationMgr.HistogramPersistency = "NONE";
ApplicationMgr.SvcOptMapping += { "Gaudi::MultiFileCatalog/FileCatalog", "Gaudi::IODataManager/IODataManager" };
// Set output level threshold (2=DEBUG, 3=INFO, 4=WARNING, 5=ERROR, 6=FATAL )
MessageSvc.OutputLevel     = 2;
//
EventSelector.PrintFreq    = 1;
EventSelector.FirstEvent   = 1;
//--------------------------------------------------------------
//
//  Setup for ROOT I/O System
//
#include "$GAUDIPOOLDBROOT/options/GaudiPoolDbRoot.opts"
MessageSvc.OutputLevel     = 3;
PoolDbCacheSvc.OutputLevel = 3;
//--------------------------------------------------------------
// Input File
//--------------------------------------------------------------
EventSelector.Input  = {"DATAFILE='FID:FCBAD21C-5CA0-D811-908C-8CB0FB2011D1'  TYP='POOL_ROOT' OPT='READ'" };
EventSelector.Input += {"DATAFILE='FID:C6550E1D-5CA0-D811-908C-8CB0FB2011D1' TYP='POOL_ROOT' OPT='READ'" };
EventSelector.Input  = {"DATAFILE='LFN:RootDst'  TYP='POOL_ROOT' OPT='READ'" };
