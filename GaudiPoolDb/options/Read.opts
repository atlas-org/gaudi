StoreExplorerAlg.Load         = 1;
StoreExplorerAlg.PrintFreq    = 1.0;
ApplicationMgr.EvtMax         = 100;
ReadAlg.OutputLevel           = 1;
PoolDbCacheSvc.OutputLevel    = 3;
