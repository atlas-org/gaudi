rootmapfile = ${LIBNAME}.rootmap
fulllibname = ${LIBNAME}.$(shlibsuffix)

ROOTMAP_DIR = ..\$(tag)

${CONSTITUENT} :: $(ROOTMAP_DIR)\$(rootmapfile)

$(ROOTMAP_DIR)\$(rootmapfile) :: $(bin)$(fulllibname)
	@echo 'Generating rootmap file for $(fulllibname)'
	$(silent) cd $(bin) & $(genmap_cmd) -i $(fulllibname) -o $(ROOTMAP_DIR)\$(rootmapfile) $(${CONSTITUENT}_genmapflags) -d



install :: ${CONSTITUENT}install
${CONSTITUENT}install :: ${CONSTITUENT}

uninstall :: ${CONSTITUENT}uninstall
${CONSTITUENT}uninstall :: ${CONSTITUENT}clean

${CONSTITUENT}clean ::
	@echo 'Deleting $(ROOTMAP_DIR)\$(rootmapfile)'
	@if exist $(ROOTMAP_DIR)\$(rootmapfile) del $(ROOTMAP_DIR)\$(rootmapfile)
