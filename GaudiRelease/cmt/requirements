# Package used to manage the Gaudi project packages
# No wildcards allowed

package GaudiRelease

version v23r3
branches doc cmt

# CMT and Gaudi policy
use GaudiPolicy	   v12r1

# Gaudi executable
use Gaudi          v23r3

# Gaudi libraries - generic
use GaudiKernel    v28r2
use GaudiCoreSvc   v1r2
use GaudiCommonSvc v1r2
use GaudiSvc       v19r1
use GaudiAud       v9r6
use GaudiAlg       v14r2
use GaudiGSL       v7r11
use GaudiUtils     v4r1
use GaudiPartProp  v1r1

# Technology-specific Persistency packages
use RootCnv        v1r14p1
use RootHistCnv    v11r1
use GaudiPython    v12r2

# Container package specifying the minimum set of core packages
use GaudiSys       v23r3

# Monitoring utilities.
use GaudiMonitor   v3r1

# Profiling components and tools
use GaudiProfiling v1r5

# Multi Processing libraries
use GaudiMP v1r4

# Examples packages
use GaudiExamples   v23r3


# Atlas packages
use PartPropSvc      v4r4

### Mark the package as the container package of the project.
apply_pattern container_package

# Allow the generation of QMTest summary
apply_pattern QMTestSummarize
